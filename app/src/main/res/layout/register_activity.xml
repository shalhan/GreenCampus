<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#acd4b1"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:background="#f9eeee"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:id="@+id/relativeLayout2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etPassword"
            android:hint="Password"
            android:textColorHint="#c5bbbb"
            android:layout_below="@+id/etEmail"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etCPassword"
            android:hint="Confirm Password"
            android:textColorHint="#c5bbbb"
            android:layout_below="@+id/etPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etNoRek"
            android:hint="Nomor Rekening"
            android:textColorHint="#c5bbbb"
            android:layout_below="@+id/etCPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etUsername"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Username"
            android:textColorHint="#c5bbbb"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/etEmail"
            android:layout_below="@+id/etUsername"
            android:layout_centerHorizontal="true"
            android:hint="Email Address"
            android:textColorHint="#c5bbbb"/>

    </RelativeLayout>

    <Button
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        android:id="@+id/bLogin"
        android:background="#e3e3e3"
        android:textColor="#909090"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout2"
        android:layout_alignEnd="@+id/relativeLayout2" />

    <Button
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/bCancel"
        android:background="#e3e3e3"
        android:textColor="#909090"
        android:layout_alignBottom="@+id/bLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>