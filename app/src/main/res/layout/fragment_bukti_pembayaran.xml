<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:background="#80ffffff"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Transaksi :"
            android:id="@+id/textView5"
            android:textSize="16sp"
            android:layout_alignTop="@+id/tvDateTransaksi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16 Des 2015"
            android:id="@+id/tvDateTransaksi"
            android:textSize="16sp"
            android:layout_marginTop="125dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:id="@+id/tvIdTransaksi"
            android:textSize="20sp"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:id="@+id/textView7"
            android:layout_marginTop="45dp"
            android:layout_below="@+id/tvIdTransaksi"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Besar Transaksi"
            android:id="@+id/textView8"
            android:layout_below="@+id/textView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Rekening"
            android:id="@+id/textView9"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:id="@+id/textView10"
            android:layout_below="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": Shalhan Radifan"
            android:id="@+id/tvNamaTrans"
            android:textSize="18sp"
            android:layout_above="@+id/tvBesarTrans"
            android:layout_alignLeft="@+id/tvBesarTrans"
            android:layout_alignStart="@+id/tvBesarTrans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": Rp. 5.000,00"
            android:id="@+id/tvBesarTrans"
            android:textSize="18sp"
            android:layout_alignTop="@+id/textView8"
            android:layout_alignLeft="@+id/tvEmailTrans"
            android:layout_alignStart="@+id/tvEmailTrans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": 12345678"
            android:id="@+id/tvNorekTrans"
            android:textSize="18sp"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignLeft="@+id/tvEmailTrans"
            android:layout_alignStart="@+id/tvEmailTrans" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=": shalhan@gmail.com"
            android:id="@+id/tvEmailTrans"
            android:textSize="18sp"
            android:layout_below="@+id/tvNorekTrans"
            android:layout_alignRight="@+id/tvDateTransaksi"
            android:layout_alignEnd="@+id/tvDateTransaksi" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_splash_screen"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back To Menu"
        android:id="@+id/bBack"
        android:background="#5a5e92"
        android:padding="5dp"
        android:textColor="#80ffffff" />
</LinearLayout>